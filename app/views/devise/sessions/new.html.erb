<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-signin"}) do |f| %>

    <%= f.input :email, label: false,required: false,placeholder: "Email", autofocus: true,input_html: {class: "form-control"} %>
    <%= f.input :password,label: false, required: false,placeholder: "Password",input_html: {class: "form-control"} %>
    
 

    <%= f.button :submit, "Log in",class: "btn btn-primary btn-block" %>
 <% end %>

<%= render "devise/shared/links" %>
